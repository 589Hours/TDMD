<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Routey.SettingsPage"
             Title="SettingsPage">
    
    <VerticalStackLayout Margin="40,40,40,40" Spacing="70" HorizontalOptions="Center" VerticalOptions="Start">

        <Picker x:Name="pLanguage" Title="Select Language:" FontSize="24" WidthRequest="250" HorizontalTextAlignment="Center" HorizontalOptions="Center" />

        <Picker x:Name="pDarkMode" Title="Dark Mode:" FontSize="24" WidthRequest="250" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
            
    </VerticalStackLayout>
    
</ContentPage>
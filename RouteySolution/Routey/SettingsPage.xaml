<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Routey.SettingsPage"
             Title="SettingsPage">
    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout Margin="40,40,40,40" Spacing="70" VerticalOptions="Start">

            <Picker x:Name="pLanguage" Title="Select Language:" FontSize="24" WidthRequest="250" HorizontalTextAlignment="Center" HorizontalOptions="Center" SelectedIndexChanged="LanguageChanged">
                <Picker.Items>
                    <x:String>Dutch</x:String>
                    <x:String>English</x:String>
                </Picker.Items>
            </Picker>

            <Picker x:Name="pDarkMode" Title="Dark Mode:" FontSize="24" WidthRequest="250" HorizontalTextAlignment="Center" HorizontalOptions="Center" SelectedIndexChanged="DarkModeChanged">
                <Picker.Items>
                    <x:String>On</x:String>
                    <x:String>Off</x:String>
                </Picker.Items>
            </Picker>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Routey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Routey"
    Title="Routey"
    Shell.TabBarBackgroundColor="Black"
    Shell.TabBarForegroundColor="#71C2FF"
    Shell.TabBarTitleColor="#71C2FF"
    Shell.TabBarUnselectedColor="White"
    Shell.BackgroundColor="Black"
    Shell.TitleColor="#71C2FF">
    
    <!-- The icons in the TabBar were used from FlatIcon: https://icons8.com/icons -->
    <TabBar Title="Tabs">
        <ShellContent
            Title="View Map"
            Icon="map.png"
            ContentTemplate="{DataTemplate local:MapPage}"
            Route="MapPage" />
        <ShellContent
            Title="Routes History"
            Icon="routes.png"
            ContentTemplate="{DataTemplate local:RoutesPage}"
            Route="RoutesPage" />
        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>
    
</Shell>

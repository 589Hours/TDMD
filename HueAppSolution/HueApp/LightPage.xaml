<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HueApp.LightPage"
             Title="LightPage"
             Loaded="LightPageLoaded">

    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout Spacing="10">
            
            <Label Text="Availible Lights:" FontSize="Header" WidthRequest="330" />
            <ListView x:Name="ListViewLights" ItemsSource="{Binding LampIds}" ItemSelected="ListViewLights_ItemSelected" WidthRequest="350" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>